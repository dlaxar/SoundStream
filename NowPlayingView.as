package  {	import flash.display.MovieClip;	import flash.media.Sound;	import flash.text.TextField;	import flash.events.Event;	import flash.media.ID3Info;		public class NowPlayingView extends MovieClip {				private var text:TextField;		private var audio:AudioPlayer;				private var preferredWidth:int;		private var preferredHeight:int;				public function NowPlayingView(audio:AudioPlayer, preferredWidth:int, preferredHeight:int, song:Sound = null) {			this.audio = audio;			this.preferredWidth = preferredWidth;			this.preferredHeight = preferredHeight;						this.audio.addEventListener(AudioPlayerEvents.NEW_SONG_ID3, this.initiateUpdate);			this.text = new TextField();			this.addChild(text);						if(song != null) this.update(song.id3);		}				private function initiateUpdate(e:Event) {			this.update(this.audio.getSongTags());		}				public function update(song:ID3Info) {			this.text.text = "";			var s:String = "";			s += "Artist: " + song.artist;			trace(s);		}	}	}