package  {	import flash.display.MovieClip;	import flash.events.Event;		public class ControlPanel extends MovieClip {				private var controls:Array;		private var pan:PanControl = null;		private var sound:SoundControl = null;		public function ControlPanel(audio:AudioPlayer) {			this.graphics.beginFill(0xFFFFFF);			this.graphics.drawRect(0, 0, 20, 20);						this.controls = new Array();						//pan			this.controls[0] = new PanControl(20, 20, 0x000000, audio);			this.controls[0].x = 0;								  			//volume			this.controls[1] = new SoundControl(20, 20, 0x000000, audio);			this.controls[1].x = this.controls[0].width;						this.controls.forEach(function(item:Control, index:int, array:Array) {				item.addEventListener(Event.ACTIVATE, this.panelActivated);			}, this);						this.controls.forEach(function(item:Control, index:int, array:Array) {				this.addChild(item);			}, this);		}				private function panelActivated(e:Event):void {			this.controls.forEach(function(item:Control, index:int, array:Array) {				item.deactivate();			}, this);			(e.target as Control).addEventListener(Event.DEACTIVATE, this.panelDeactivated);		}				private function panelDeactivated(e:Event):void {			this.controls.forEach(function(item:Control, index:int, array:Array) {				item.activate();			}, this);			(e.target as Control).removeEventListener(Event.DEACTIVATE, this.panelDeactivated);		}	}	}