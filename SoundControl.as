package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.display.Sprite;	import flash.events.Event;	import fl.transitions.Tween;	import fl.transitions.easing.Bounce;		public class SoundControl extends Control {				private var currentSlider:Slider;				public function SoundControl(preferredWidth:int, preferredHeight:int, preferredColor:uint, audio:AudioPlayer) {			super(preferredWidth, preferredHeight, preferredColor, audio);			this.addChild(new IMGSound());		}				public override function getControlElement():MovieClip {			var s:MovieClip = new MovieClip();			s.graphics.beginFill(0xFFFFFF);						this.currentSlider = new Slider(100, 20, 100, 0);			s.addChild(this.currentSlider);			this.currentSlider.rotation = 90;			this.currentSlider.setValue(100);			this.currentSlider.x = 40;			this.currentSlider.addEventListener(Event.ENTER_FRAME, this.onPanChange);						s.graphics.drawRect(0, 0, this.height, 100+20);			s.graphics.endFill();						return s;		}				private function onPanChange(e:Event) {			this.getAudioPlayer().setVolume(this.currentSlider.getValue()/100);		}	}	}