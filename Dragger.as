package {	import flash.display.MovieClip;	import flash.display.Sprite;	public class Dragger extends MovieClip {		private var h:int;		private var w:int;				private var d:Sprite;				public function Dragger(height:int, width:int, c:uint = 0x000000) {			this.h = height;			this.w = width;			draw(c);		}		public function draw(c:uint = 0x000000):void {			d = new Sprite();						d.graphics.beginFill(c);			d.graphics.drawRect(-w/2, -h, w, h/2);						d.graphics.moveTo(-w/2, -h/2);			d.graphics.lineTo(0, 0);			d.graphics.lineTo(w/2, -h/2);			d.graphics.lineTo(-w/2, -h/2);						addChild(d);		}				public function setColor(c:uint):void {			removeChild(d);			draw(c);			addChild(d);		}	}}