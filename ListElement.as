package  {	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.events.MouseEvent;	import fl.containers.ScrollPane;	import fl.motion.MotionEvent;	import flash.events.Event;		public class ListElement extends MovieClip {				private var text:TextField;		private var str:String;		private const TEXT_SIZE = 25;		private var container:SingleSelectList;				private var preferredWidth:int;		private var preferredHeight:int;				public function ListElement(str:String, width:int, height:int, container:SingleSelectList) {			this.container = container;			this.str = str;						this.preferredWidth = width;			this.preferredHeight = height;						this.draw();						this.addEventListener(MouseEvent.CLICK, this.onClick);		}				private function draw(selected:Boolean = false) {			this.graphics.beginFill(selected ? 0xFFFFFF : 0x000000, selected ? 0.2 : 1);			this.graphics.drawRect(this.container.width/2-this.preferredWidth/2, 0, this.preferredWidth, this.preferredHeight);			this.graphics.endFill();						this.text = new TextField();			this.text.text = str;			this.text.setTextFormat(new TextFormat("DS-Digital", this.TEXT_SIZE, selected  ? 0xFFFFFF : 0xFF7400, null, null, null, null, null, "center"));			this.text.width = this.preferredWidth;			this.text.height = height;			this.text.x = this.container.width/2 - this.preferredWidth/2;			addChild(this.text);		}						private var click:Function = function(e:ListElement) {};				private function onClick(e:MouseEvent) {			this.click(this);		}				public function select() {			this.graphics.clear();			this.removeChild(this.text);			this.draw(true);		}				public function unselect() {			this.graphics.clear();			this.removeChild(this.text);			this.draw(false);		}				public function callOnClick(f:Function) {			this.click = f;		}	}	}