package  {	import flash.events.Event;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.Font;		public class NowPlayingControlElement extends UnopenableControl {				private var field:TextField;		public function NowPlayingControlElement(preferredWidth:int, preferredHeight:int, preferredColor:uint, audio:AudioPlayer) {			super(preferredWidth, preferredHeight, preferredColor, audio);			this.addEventListener(Event.ENTER_FRAME, this.onFrame);			this.field = new TextField();			this.field.defaultTextFormat = new TextFormat("DS-Digital", 20, 0xFF7400, null, true, null, null, null, "right");			this.field.height = 30;			this.field.width = preferredWidth;			this.addChild(this.field);		}				public function onFrame(e:Event):void {			if(!this.getAudioPlayer().isPlaying()) this.field.text = "PAUSE";			else this.field.text = this.getAudioPlayer().getList().getID3Line(this.getAudioPlayer().getItemNumber()).toUpperCase();				}	}	}